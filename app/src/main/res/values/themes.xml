<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Calculator" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <!-- My button style !-->
        <item name="android:buttonStyle">@style/MainButtonView</item>
    </style>

    <!-- Переопределенное отображение кнопки!-->
    <style name="MainButtonView">
        <item name="android:textAlignment">center</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_margin">5px</item>
        <item name="android:padding">16dp</item>
    </style>
</resources>